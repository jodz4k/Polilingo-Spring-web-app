package com.example.demo.repositories;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import model.ClanImaCilj;

public interface ClanCiljeviRepository extends JpaRepository<ClanImaCilj, Integer> {
	
	@Query("SELECT COUNT(cic) FROM ClanImaCilj cic WHERE cic.clan.idClan = :clanId AND cic.jeIspunjen = true")
    int brojIspunjenihCiljevaZaClana(@Param("clanId") int clanId);
	
}
